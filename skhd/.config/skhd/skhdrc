## Quickly restart the yabai launch agent
ctrl + alt + cmd - r : yabai --restart-service

## Close active application
#hyper - backspace : $(yabai -m window $(yabai -m query --windows --window | jq -re ".id") --close)
hyper - w : yabai -m window --close
hyper - return : open -na /Applications/iTerm.app

hyper - r : yabai -m space --rotate 90
hyper - f : yabai -m window --toggle zoom-fullscreen
hyper - t : yabai -m window --toggle float --grid 4:4:1:1:2:2
hyper - space : yabai -m space --balance

## window focus
alt - j : yabai -m window --focus south
alt - h : yabai -m window --focus west
alt - k : yabai -m window --focus north
alt - l : yabai -m window --focus east

alt - s : yabai -m display --focus west
alt - g : yabai -m display --focus east

hyper - 1: yabai -m space --focus web
hyper - 2: yabai -m space --focus term
hyper - 3: yabai -m space --focus notes
hyper - 4: yabai -m space --focus apps
hyper - 5: yabai -m space --focus fun

ctrl + shift - 1: yabai -m window --space web; yabai -m space --focus web
ctrl + shift - 2: yabai -m window --space term; yabai -m space --focus term
ctrl + shift - 3: yabai -m window --space notes; yabai -m space --focus notes
ctrl + shift - 4: yabai -m window --space apps; yabai -m space --focus apps
ctrl + shift - 5: yabai -m window --space fun; yabai -m space --focus fun

